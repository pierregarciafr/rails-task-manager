<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <li>
    <%= check_box_tag(task.title, value = "1", checked = task.completed) %>
    <%= link_to task.title, task_path(task) %>
    <%= link_to "(delete)", task_delete_path(task), method: :delete, data: {confirm:"Delete #{task.title}?"} %>

  </li>
  <% end %>
</ul>
<p><%= link_to "+ Add a new task", tasks_new_path %></p>
